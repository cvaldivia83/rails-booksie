<%= simple_form_for [@book, @booking], data: {controller: "flatpickr"} do |f| %>
  <%= f.input :start_date, as: :string, label: false, input_html: { class: 'devise-form-input', data: { flatpickr_target: "start" } } %>
  <%= f.input :end_date, as: :string, label: false, input_html: { class: 'devise-form-input', data: {flatpickr_target: "end"} } %>
  <%= f.association :book, label: false, input_html: { class: 'devise-form-input'}, selected: params[:book_id] %>
  <%= f.button :submit, "Book now", class: 'btn-violet-solid mt-4 mx-auto' %>
<% end %>
