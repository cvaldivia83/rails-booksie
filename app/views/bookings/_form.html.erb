<%= simple_form_for [book, booking], data: {controller: "flatpickr"} do |f| %>
  <%= f.input :start_date, as: :string, label: false, placeholder: "Book from:", input_html: { class: 'devise-form-input', data: { flatpickr_target: "start" } } %>

  <%= f.input :end_date, as: :string, label: false, placeholder: "Until:", input_html: { class: 'devise-form-input', data: {flatpickr_target: "end"} } %>

  <%= f.association :book, label: false, input_html: { class: 'devise-form-input'}, selected: params[:book_id] %>

  <div class="flex justify-between">
    <%= f.button :submit, "Book now", class: 'btn-violet-solid mt-4 mx-4' %>
    <%= link_to "Cancel", book_path(@book), class: "btn-violet-outlined mt-4 mx-4" %>
  </div>
<% end %>
