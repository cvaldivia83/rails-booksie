
<% if notice %>
  <div class="bottom-4 py-6 px-4 bg-white/30 rounded-lg" data-controller="notification"
  data-notification-delay-value="20000"
  class="transition transform duration-1000 hidden"
  data-transition-enter-from="opacity-0 translate-x-6"
  data-transition-enter-to="opacity-100 translate-x-0"
  data-transition-leave-from="opacity-100 translate-x-0"
  data-transition-leave-to="opacity-0 translate-x-6">
    <div class="flex items-center space-x-4">

      <div class="flex flex-col space-y-1">
          <span class="font-bold"><%= notice %></span>
      </div>

    </div>
    <div class="flex-none px-4 py-2 text-stone-600 text-xs md:text-sm">
      <button data-action="notification#hide">Close</button>
    </div>
  </div>
<% end %>



