<div class="flex justify-between mt-8 mx-8">
  <%= simple_form_for(wishlist, data: { turbo: "false" }) do |f| %>
    <div class="hidden">
      <%= f.input :book_id, input_html: { value: book.id } %>
    </div>
    <%= f.button :submit, "Save For Later", class: 'btn-violet-solid' %>
  <% end %>
    <% if Booking.where(user: current_user, book: book).empty? %>
      <%= link_to "Book this Book", new_book_booking_path(book), class: "btn-violet-outlined" %>
    <% else %>
      <span class="py-2 px-4 bg-yellow-100 font-semibold text-neutral-700 rounded"><span class="mr-2 text-yellow-500"><i class="fa-solid fa-circle-pause"></i></span>Waiting for booksie's approval</span>
    <% end %>
</div>
