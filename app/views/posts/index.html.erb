<div class="polka">
  <div class="regular-container">
  <h1 class="main-title">Booksie<span class="text-violet-400">Blog</span></h1>

  <% if current_user && current_user.admin %>
    <div class="text-right m-8">
      <%= link_to "New Post", new_post_path, class: 'btn-violet-solid'  %>
    </div>
  <% end %>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-16 my-16">
    <% @posts.each do |post| %>
      <%= render 'posts/post_card', post: post %>
    <% end %>
  </div>

</div>

</div>
