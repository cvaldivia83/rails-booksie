<div class="">
  <div class="swiper mySwiper" data-controller="super-booksie">
    <div class="swiper-pagination"></div>
    <div class="swiper-wrapper">
      <% @booksies.first(6).each_with_index do |booksie, index| %>
        <div class="swiper-slide">
          <div class="px-2">
            <div class="booksie-card_image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path booksie.photo.key, crop: :fill %>'); background-size: cover; background-position: center;"></div>
            <h2 class="booksie-card_username">@<%= booksie.username %></h2>
            <p class="px-2 text-center mt-4 leading-loose  text-neutral-700 font-light text-sm"><%= @testimonials[index] %></p>
          </div>
        </div>
      <% end %>
    </div>
    <div class="swiper-button-next"></div>
    <div class="swiper-button-prev"></div>

  </div>
</div>

