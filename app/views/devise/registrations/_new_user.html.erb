<div class="thick-container">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <div class="md:grid md:grid-cols-2 md:gap-2">
          <%= f.input :email,
                    required: true,
                    label: false,
                    placeholder: 'E-mail',
                    autofocus: true,
                    input_html: { autocomplete: "email", class: 'devise-form-input' }%>
        <%= f.input :username,
                    required: true,
                    label: false,
                    placeholder: 'Username',
                    autofocus: true,
                    input_html: { autocomplete: "email", class: 'devise-form-input' }%>
        </div>

        <%= f.input :photo, as: :file, label: false, input_html: {class: 'devise-file-input'} %>
        <div class="md:grid md:grid-cols-2 md:gap-2">
          <%= f.input :password,
                      required: true,
                      label: false,
                      placeholder: 'Password',
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { autocomplete: "new-password", class: 'devise-form-input' } %>
          <%= f.input :password_confirmation,
                      required: true,
                      label: false,
                      placeholder: 'Confirm password',
                      input_html: { autocomplete: "new-password", class: 'devise-form-input' } %>
        </div>

      </div>

      <div class="form-actions">
        <%= f.button :submit, "Sign up", class: 'btn-violet-solid w-full mt-2' %>
      </div>
    <% end %>
    <span class="icon-violet-700 text-center text-3xl block my-8" data-read-more-target="arrowUp" data-action="click->read-more#closeForm"><i class="fa-solid fa-angles-up"></i></span>
</div>
